<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SiGas.Views.TipoGastoAdd"
             Title="Tipo Gastos">
    <ContentPage.ToolbarItems>
        <ToolbarItem Icon="delete.png" Command="{Binding DeleteCommand}" />
        <ToolbarItem Icon="check.png" Command="{Binding OkCommand}" />
    </ContentPage.ToolbarItems>

    <ContentPage.Content>
        <StackLayout Spacing="20" Padding="15">
            <Label Text="Descrição" FontSize="Medium" />
            <Entry Text="{Binding Descricao}" FontSize="Medium" x:Name="txtNome"/>           
        </StackLayout>        
    </ContentPage.Content>
</ContentPage>